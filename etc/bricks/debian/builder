#!/bin/bash -e

. $BRICKS_HOME/suexec
chown -R builder. /builded

debian() {
  info 'Starting buildpackage'
  pushd /opt/workspace/source
    dpkg-buildpackage -b -rfakeroot
  popd

  info 'Moving deb files to volume'
  rm -Rf /builded/*
  mv /opt/workspace/*.deb /opt/workspace/*.changes  /builded/
}

suexec debian
