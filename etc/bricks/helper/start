#!/bin/bash -e

. $BRICKS_HOME/builder
scripts=$(echo $BRICKY_ENTRYPOINTS | tr ',' ' ')

builder() {
    for bricky in $scripts
    do
        . $bricky
    done
}

builder_source() {
  cat $scripts > /tmp/builderplan
  grep -v "bin/bash" /tmp/builderplan | more 
}

shell() {
    export -f builder
    export -f builder_source

    show "\n\nType 'builder' to build the project :p"
    show "Type 'builder_source' to see the bricks compilation :p\n\n"
    /bin/bash
}

start() {
  if [[ "$BRICKY_ENTRYPOINTS_SHELL" == "true" ]]
  then
    shell
  else
    builder
  fi
}

start
